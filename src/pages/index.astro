---
// Astro Frontmatter
import Image from '../components/Image.astro';
import { Image as AImage } from "astro:assets";
import Layout from '../layouts/Layout.astro';
import type { ImageMetadata } from 'astro';
import Service1 from '../assets/img/service1.jpg';
import Service2 from '../assets/img/service2.jpg';
import Service3 from '../assets/img/service3.jpg';
import Slogan from '../assets/img/slogan.png';
import HeaderLogo from '../assets/img/risevista-logo.png';
import Hero1 from '../assets/img/hero1.webp';
import Hero2 from '../assets/img/hero2.webp';
import Hero3 from '../assets/img/hero3.webp';
import Hero4 from '../assets/img/hero4.webp';
import s1 from '../assets/img/s1.webp';
import s2 from '../assets/img/s2.webp';
import s3 from '../assets/img/s3.webp';
import s4 from '../assets/img/s4.webp';
import s5 from '../assets/img/s5.webp';
import s6 from '../assets/img/s6.webp';
import s7 from '../assets/img/s7.webp';
import s8 from '../assets/img/s8.webp';
import s9 from '../assets/img/s9.webp';
import s10 from '../assets/img/s10.webp';
import s11 from '../assets/img/s11.webp';
import s12 from '../assets/img/s12.webp';
import s13 from '../assets/img/s13.webp';
import s14 from '../assets/img/s14.webp';
import s15 from '../assets/img/s15.webp';
import s16 from '../assets/img/s16.webp';
import s17 from '../assets/img/s17.webp';
import s18 from '../assets/img/s18.webp';
import s19 from '../assets/img/s19.webp';
import s20 from '../assets/img/s20.webp';
import s21 from '../assets/img/s21.webp';
import s22 from '../assets/img/s22.webp';
import s23 from '../assets/img/s23.webp';
import s24 from '../assets/img/s24.webp';

// 4枚の画像を定義（実際のパスに変更してください）
const heroImages = [
  Hero1, 
  Hero2, 
  Hero3, 
  Hero4  
];

const letters = [
  s1,s2,s3,s4,s5,s6,s7,s8,s9,s10,s11,s12,
  s13,s14,s15,s16,s17,s18,s19,s20,s21,s22,s23,s24
];

const chunk = <T,>(arr: T[], size: number): T[][] => Array.from(
  { length: Math.ceil(arr.length / size) },
  (_: unknown, k: number) => arr.slice(k * size, k * size + size)
);
const CHUNK_SIZE = 13;
const cols = chunk(letters, CHUNK_SIZE);
---

<Layout title="株式会社RISE VISTA">
<!-- Hero Section -->

<!-- ===== Hero: Mobile (md未満) ===== -->
<section class="relative bg-[#EDE4D5] min-h-[100dvh] flex flex-col md:hidden pt-20">
  <!-- 1) 右上テキスト（Slogan） -->
  <div class="w-full h-auto px-4 mt-6 flex justify-end animate-text-down">
    <Image src={Slogan} alt="Slogan" class="w-full" loading="eager" decoding="async" />
  </div>

  <!-- 2) 楕円スライダー + 一文字ずつテキスト（重ねる） -->
  <div class="relative w-full">
    <!- 楕円スライダー -->
    <div class="relative w-full h-[48vh]">
      <div class="absolute inset-0">
        <div class="ellipse-image-container">
          <div class="ellipse-wrapper">
            {heroImages.map((heroImg, index) => (
              <Image
                src={heroImg}
                alt={`背景画像 ${index + 1}`}
                class={`ellipse-background-image slide-${index}`}
                loading={index === 0 ? "eager" : "lazy"}
                decoding="async"
                aria-hidden="true"
              />
            ))}
          </div>
        </div>
      </div>
      <!-- 一文字ずつテキスト（中央に重ねる） -->
      <div class="absolute inset-0 z-10 flex items-center justify-center">
        <div class="flex flex-row-reverse gap-[0.35em] px-4">
          {cols.map((col, colIdxFromRight) => (
            <div class="flex flex-col items-center leading-none">
              {col.map((img, i) => {
                const globalIndex = colIdxFromRight * CHUNK_SIZE + i;
                return (
                  <span
                    class="inline-block letter-span"
                    style={`animation-delay:${globalIndex * 70}ms`}
                  >
                    <AImage
                      src={img}
                      alt=""
                      width={img.width}
                      height={img.height}
                      loading="lazy"
                      decoding="async"
                      class="h-[2.2em] object-contain"
                    />
                  </span>
                );
              })}
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>

  <!-- 3) 本文テキスト -->
  <div class="w-full px-6 mt-8 pb-10 pt-10">
    <p class="text-black text-[15px] leading-6 tracking-normal font-serif">
      RISE VISTAは、「不動産」という枠組みを超えて、未来を創る力になりたいと考えています。
      一人ひとりの暮らしから、地域、そして日本の未来を変えていく。  
    </p>
  </div>
</section>

<!-- ===== Hero: Desktop (md以上) —— 既存をそのまま残す ===== -->
<section class="relative bg-[#EDE4D5] min-h-[100dvh] overflow-hidden pt-20 md:pt-64 hidden md:flex">
