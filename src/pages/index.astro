    </div>
    
    <!-- 右カラム：ボタン（幅1） -->
    <div class="flex-[1] flex justify-center items-center fade-in-text" style="--delay: 0.8s;">
      <a href="/mission">
        <button
          type="button"
          class="text-white font-notojp bg-green-900 hover:bg-green-500 font-medium rounded-lg text-sm px-8 py-4 text-center"
        >
          OUR MISSION
          <span class="ml-2 inline-block align-middle">→</span>
        </button>
      </a>
    </div>
  </div>
</section>

  
 <!-- VALUES セクション -->
