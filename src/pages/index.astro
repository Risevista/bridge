          <Image
            src={heroImg}
            alt={`背景画像 ${index + 1}`}
            class={`ellipse-background-image slide-${index}`}
            loading={index === 0 ? "eager" : "lazy"}
            decoding="async"
            aria-hidden="true"
          />
        ))}
      </div>
    </div>
  </div>
  <!-- 一文字ずつスローガン -->
  <div class="absolute left-48 bottom-16 z-20 flex flex-row-reverse gap-[0.5em]">
    {/* 右→左の順で列を並べるため flex-row-reverse */}
    {cols.map((col: ImageMetadata[], colIdxFromRight: number) => (
      <div class="flex flex-col items-center leading-none">
        {col.map((img: ImageMetadata, i: number) => {
          const globalIndex = colIdxFromRight * CHUNK_SIZE + i; // アニメの遅延計算
          return (
            <span
              class="inline-block letter-span"
              style={`animation-delay:${globalIndex * 70}ms`}
            >
              <AImage
                src={img}
                alt=""
                width={img.width}
                height={img.height}
                loading="lazy"
                decoding="async"
                class="h-[2em] md:h-[3em] object-contain"
              />
            </span>
          );
        })}
